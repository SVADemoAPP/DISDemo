<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".activity.HomeActivity">

    <LinearLayout

        android:id="@+id/home_top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#3c3d41"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/home_search"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/home_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="添加"
            android:textColor="@color/home_text_color"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout

        android:id="@+id/home_search"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@id/home_top"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toTopOf="@id/rv_group"
        android:background="@color/home_top_bg_color">
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_height="40dp"
            android:background="@mipmap/home_edit_bg">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/home_search"/>
            <EditText
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_height="20dp"
                android:hint="输入添加的文件名"
                android:textSize="14sp"
                android:id="@+id/et_search"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/home_text_color"/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:textColor="@color/home_text_color"
            android:text="确定"
            android:textSize="18sp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:id="@+id/v_left"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintHorizontal_weight="13"
    app:layout_constraintRight_toLeftOf="@id/rv_group"/>

<android.support.v7.widget.RecyclerView
    android:id="@+id/rv_group"
    app:layout_constraintLeft_toRightOf="@id/v_left"
    app:layout_constraintRight_toLeftOf="@id/v_right"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@id/home_search"
    app:layout_constraintVertical_weight="1"
    android:layout_width="0dp"
    app:layout_constraintHorizontal_weight="1044"
    android:layout_height="0dp"
    android:scrollbars="vertical"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/v_right"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/rv_group"
        app:layout_constraintHorizontal_weight="23"/>
</android.support.constraint.ConstraintLayout>