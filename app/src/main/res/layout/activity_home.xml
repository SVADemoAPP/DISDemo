<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="0dp"
        android:layout_height="27dp"
        android:background="#fd3"
        android:gravity="center"
        android:text="tv1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv2"
        tools:layout_editor_absoluteY="3dp" />
    <TextView
        android:id="@+id/tv2"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="tv2"
        app:layout_constraintHorizontal_weight="2"
        android:gravity="center"
        android:background="@color/colorAccent"
        app:layout_constraintLeft_toRightOf="@id/tv1"
        app:layout_constraintRight_toLeftOf="@+id/tv3"
        />
    <TextView
        android:id="@+id/tv3"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="tv3"
        android:gravity="center"
        app:layout_constraintHorizontal_weight="1"
        android:background="@android:color/holo_blue_light"
        app:layout_constraintLeft_toRightOf="@id/tv2"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/tv4"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="tv4"
        android:gravity="center"
        android:background="@android:color/holo_blue_light"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv5"
        />
    <TextView
        android:id="@+id/tv5"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="tv5"
        android:gravity="center"
        android:background="#fd3"
        app:layout_constraintLeft_toRightOf="@id/tv4"
        app:layout_constraintRight_toLeftOf="@+id/tv6"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        />
    <TextView
        android:id="@+id/tv6"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="tv6"
        android:gravity="center"
        android:background="@color/colorAccent"
        app:layout_constraintLeft_toRightOf="@id/tv5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        />
<android.support.v7.widget.RecyclerView
    android:id="@+id/rv_group"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:scrollbars="vertical"
    app:layout_constraintTop_toBottomOf="@id/tv4"
    android:layout_marginTop="20dp"
    app:layout_constraintBottom_toBottomOf="parent"></android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>